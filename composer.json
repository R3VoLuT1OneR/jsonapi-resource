{
    "name": "pz/jsonapi-resource",
    "description": "PHP 8.0 Library for parsing JSON:API resource in to data response.",
    "keywords": [
        "rest",
        "json",
        "jsonapi",
        "serialization",
        "php attributes"
    ],
    "license": "MIT",
    "type": "library",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "pest": "vendor/bin/pest --coverage-text",
        "phpstan": "vendor/bin/phpstan analyze -c phpstan.neon"
    },
    "require": {
        "php": "^8.0",
        "psr/simple-cache": "^1.0"
    },
    "require-dev": {
        "ext-json": "*",
        "pestphp/pest": "^0.3.17",
        "symfony/var-dumper": "^5.2",
        "phpstan/phpstan": "^0.12.64"
    },
    "autoload": {
        "psr-4": {
            "JSONAPI\\Resource\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "JSONAPI\\Resource\\Tests\\Models\\": "tests/Models"
        }
    }
}
